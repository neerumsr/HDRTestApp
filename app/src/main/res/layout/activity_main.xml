<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

<!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" > -->

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="HDR Caps Check" />

    <CheckBox
        android:id="@+id/aHDRcheck"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="A HDR Caps"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignTop="@+id/surfaceview"
        android:layout_toEndOf="@+id/surfaceview" />

    <CheckBox
        android:id="@+id/sHDRcheckBx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="S HDR Caps"
        android:textColor="@color/colorAccent"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/playvideoplayer" />

    <Button
        android:id="@+id/playvideoplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- PLAY SHDR Video -"
        android:layout_below="@+id/aHDRcheck"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/playAndroidHDRvideoplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- PLAY AHDR  -"
        android:layout_alignBaseline="@+id/playvideoplayer"
        android:layout_alignBottom="@+id/playvideoplayer"
        android:layout_toEndOf="@+id/file_path" />

    <Button
        android:id="@+id/pausevideoplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playAndroidHDRvideoplayer"
        android:layout_alignBottom="@+id/playAndroidHDRvideoplayer"
        android:layout_toEndOf="@+id/browse"
        android:text="- PAUSE Video -" />


    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/playAndroidHDRvideoplayer"
        android:layout_gravity="center" />

<!-- </RelativeLayout> -->

</LinearLayout>